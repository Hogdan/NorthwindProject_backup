@model IEnumerable<Category>
<div class="container-xxl pt-4">
  <h2>Inventory Management</h2>
  <div id="User" style="display:none;" data-email="@User.Identity.Name"
    data-employee="@User.IsInRole("northwind-employee")">
  </div>
  <div class="d-flex align-items-center gap-3">
    <div class="input-group my-3 w-auto">
      <select class="form-select" id="CategoryId">
        @foreach (Category c in Model)
        {
          if (c.CategoryId == ViewBag.id)
          {
            <option value="@c.CategoryId">@c.CategoryName</option>
          }
          else
          {
            <option value="@c.CategoryId">@c.CategoryName</option>
          }
        }
      </select>
    </div>
    <div class="d-flex" id="oos">
      <input class="form-check-input" type="checkbox" id="OutOfStock">
      <label class="form-check-label" for="OutOfStock">Out of Stock</label>
    </div>
    <div class="d-flex" id="nro">
      <input class="form-check-input" type="checkbox" id="NeedsReorder">
      <label class="form-check-label" for="NeedsReorder">Needs Reorder</label>
    </div>
  </div>
  <table class="table table-hover">
    <thead>
      <th scope="col">Product Name</th>
      <th scope="col" class="text-end">Price ($)</th>
      <th scope="col" class="text-end">Qty Per Unit</th>
      <th scope="col" class="text-end">On Order</th>
      <th scope="col" class="text-end">Reorder Level</th>
      <th scope="col" class="text-end">Stock</th>
    </thead>
    <tbody id="product_rows" data-id="@ViewBag.id">
    </tbody>
  </table>
</div>
<div id="inventoryModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="inventoryForm">
          <input type="hidden" id="ProductId" name="ProductId" />
          <div class="form-group">
            <label>Product Name</label>
            <input id="ProductName" name="ProductName" class="form-control" />
          </div>
          <div class="form-group">
            <label>Category</label>
            <select class="form-select" id="CategoryId">
              @foreach (Category c in Model)
              {
                if (c.CategoryId == ViewBag.id)
                {
                  <option value="@c.CategoryId">@c.CategoryName</option>
                }
                else
                {
                  <option value="@c.CategoryId">@c.CategoryName</option>
                }
              }
            </select>
          </div>
          <div class="form-group">
            <label>Quantity Per Unit</label>
            <input id="QuantityPerUnit" name="QuantityPerUnit" class="form-control" />
          </div>
          <div class="form-group">
            <label>Unit Price</label>
            <input id="UnitPrice" name="UnitPrice" class="form-control" />
          </div>
          <div class="form-group">
            <label>Units On Order</label>
            <input id="UnitsOnOrder" name="UnitsOnOrder" class="form-control" />
          </div>
          <div class="form-group">
            <label>Reorder Level</label>
            <input id="ReorderLevel" name="ReorderLevel" class="form-control" />
          </div>
          <div class="form-group">
            <label>Units In Stock</label>
            <input id="UnitsInStock" name="UnitsInStock" class="form-control" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveProduct">Save</button>
      </div>
    </div>
  </div>
</div>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto" id="toast_header">Toast Header</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="toast_body">
      Toast Message
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="../../inventory.js"></script>